# zenOS Environment Configuration
# Copy this file to .env and fill in your values

# OpenRouter API Key (required)
# Get yours at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Database Configuration (optional - defaults shown)
DB_PASSWORD=zenpass
ZEN_DB_URL=postgresql://zen:zenpass@zen-memory:5432/zenos
REDIS_URL=redis://zen-cache:6379

# Model Configuration (optional)
ZEN_DEFAULT_MODEL=anthropic/claude-3-sonnet
ZEN_MAX_TOKENS=2000
ZEN_TEMPERATURE=0.7

# Behavior Configuration (optional)
ZEN_AUTO_CRITIQUE=true
ZEN_STREAM=true
ZEN_DEBUG=false

# Cost Control (optional)
ZEN_MAX_COST_PER_REQUEST=1.0
